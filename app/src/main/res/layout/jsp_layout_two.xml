<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/select_bg_unit_gou"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:id="@+id/queding_jsp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="标题"
                android:textSize="25.0sp"
                android:gravity="center"
                android:id="@+id/biaoti"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入正文"
                android:textSize="20.0sp"
                android:gravity="top"
                android:id="@+id/zhenwen"/>`
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/black_detail_tool_back_enabled"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/shanchu_jsp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/black_detail_tool_time"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:id="@+id/shijian_jsp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
